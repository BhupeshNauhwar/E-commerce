<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <!-- Your CSS -->
    <link rel="stylesheet" href="/css/delivered.css">
</head>

<body>
    <nav>
        <div class="logo">
            <h1>FASHIONSHOP</h1>
        </div>
        <ul>
            <li>
                <a href="/admin/home">Home</a>
                <a href="/admin/mendata">Men</a>
                <a href="/admin/womendata">Women</a>
                <a href="/admin/kiddata">Kid</a>
                <a href="/admin/neworders">Orders</a>
                <a href="/admin/deleiverdproduct">Delivered</a>
                <a href="/admin/logout">Log Out</a>
            </li>
        </ul>
    </nav>

    <div class="container ">
        <h1 class="sub">Orders</h1>

        {{#each userOrders}}
        <div class="order">
            <div class="user-details">
                <h2>Name: {{user.name}}</h2>
                <p>Email: {{user.email}}</p>
                <p>Address: {{user.address}}</p>
                <p>Pincode: {{user.pincode}}</p>
                <p>Mobile: {{user.mobile}}</p>
            </div>
            <div class="order-details">
                <h3>Order Details:</h3>
                <div class="products">
                    {{#each this.orders}}
                    <div class="pro-container">
                        <img src="{{this.url}}" alt="Product Image" class="pro_img">
                        <div class="info">
                            <p class="aprice">Date: {{this.date}}</p>
                        </div><br>
                        <form action="/admin/delivered" method="POST">
    <!-- User details -->
    <input type="hidden" name="userName" value="{{../user.name}}">
    <input type="hidden" name="userEmail" value="{{../user.email}}">
    <input type="hidden" name="userAddress" value="{{../user.address}}">
    <input type="hidden" name="userPincode" value="{{../user.pincode}}">
    <input type="hidden" name="userMobile" value="{{../user.mobile}}">
    <!-- Product details -->
    <input type="hidden" name="productId" value="{{this.id}}">
    <input type="hidden" name="url" value="{{this.url}}">
    <input type="hidden" name="shippingDate" value="{{this.date}}">
    <button type="submit" class="cart">Process Order</button>
</form>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
     <footer class="footer">
        <p>&copy; 2023 Your E-Commerce Admin</p>
       
    </footer>
   
</body>

</html>
